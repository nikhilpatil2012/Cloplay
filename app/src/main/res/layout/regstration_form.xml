<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_background"
    android:orientation="vertical"
   >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <TextView
                android:id="@+id/cutomer_title"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="CUSTOMER INFORMATION FORM"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/cutomer_sub_title"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="(FILL OUT THE INFORMATION BELOW)"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">

              <!-- First & Last Name -->

                <LinearLayout
                    android:background="@drawable/edittext_shadow"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:src="@drawable/name"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <EditText
                        style="@style/registration_form_edit_text"
                        android:inputType="textNoSuggestions"
                        android:id="@+id/first_name"
                        android:hint="FIRST NAME"/>

                    <ImageView
                        android:layout_margin="5dp"
                        android:src="@drawable/pencil"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_shadow"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:src="@drawable/name"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <EditText
                        style="@style/registration_form_edit_text"
                        android:inputType="textNoSuggestions"
                        android:id="@+id/last_name"
                        android:hint="LAST NAME"/>

                    <ImageView
                        android:layout_margin="5dp"
                        android:src="@drawable/pencil"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>

                <!-- Phone & Email Address -->

                <LinearLayout
                    android:background="@drawable/edittext_shadow"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:src="@drawable/contact"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <EditText
                        style="@style/registration_form_edit_text"
                        android:inputType="phone"
                        android:id="@+id/phone"
                        android:hint="PHONE #"/>

                    <ImageView
                        android:layout_margin="5dp"
                        android:src="@drawable/pencil"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_shadow"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:src="@drawable/email"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <EditText
                        style="@style/registration_form_edit_text"
                        android:inputType="textEmailAddress"
                        android:id="@+id/email"
                        android:hint="EMAIL ADDRESS"/>

                    <ImageView
                        android:layout_margin="5dp"
                        android:src="@drawable/pencil"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>

                <!-- ************* -->

                <LinearLayout
                        android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_shadow"
                    android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_margin="5dp"
                            android:src="@drawable/address"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                        <EditText
                            style="@style/registration_form_edit_text"
                            android:inputType="textNoSuggestions"
                            android:id="@+id/address"
                            android:hint="HOME ADDRESS"/>

                    <ImageView
                        android:layout_margin="5dp"
                        android:src="@drawable/pencil"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

                <Button
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/send"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:background="@drawable/register_button_select_effect"
                    android:text="SEND"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_width="200dp"
                    android:layout_height="80dp" />

        </LinearLayout>


    </ScrollView>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar" />


</LinearLayout>
